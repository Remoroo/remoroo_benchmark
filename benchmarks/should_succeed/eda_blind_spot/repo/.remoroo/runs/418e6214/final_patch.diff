+    best_r2 = -np.inf
+    best_degree = 1
+    best_model = None
+    best_poly = None
+    best_pred = None
+    for degree in range(1, 5):
+        if degree == 1:
+            X_train_poly = X_train
+            X_test_poly = X_test
+        else:
